cxx_library doim
    @type=user:

    cxx_header
        @visibility=public
        @directory=..:

        doim/cxx/cxx_file.h
        doim/cxx/cxx_header.h
        doim/cxx/cxx_include_directory.h
        doim/cxx/cxx_object_file.h
        doim/cxx/cxx_program.h
        doim/cxx/cxx_static_library.h
        doim/db/db_key.hpp
        doim/db/db_value.hpp
        doim/fs/fs_directory.hpp
        doim/fs/fs_file.hpp
        doim/sys/argument.hpp
        doim/sys/command.hpp
        doim/sys/executable.hpp
        doim/generic/location.hpp
        doim/generic/object.hpp
        doim/base.hpp
        doim/manager.h
    ;

    cxx_library:
        ../3rdparty/boost_template

        ../const/const
        ../im/im
        ../err/err
    ;

    cxx_file:
        cxx/cxx_file.cpp
