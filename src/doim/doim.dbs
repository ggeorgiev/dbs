    cxx_library:
        ../3rdparty/gtest

        ../gtest/gtest
        ../err/err-test

        doim
    ;

    cxx_file:
        gtest/fs/fs_directory-utest.cpp
        gtest/fs/fs_file-ptest.cpp
        gtest/manager-utest.cpp
    ;
;
