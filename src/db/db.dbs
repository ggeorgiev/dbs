cxx_library db
    @type=user:

    cxx_header
        @visibility=public
        @directory=..:

        db/database.h
    ;

    cxx_library:
        /stl

        /boost_filesystem
        /rocksdb

        ../im/im
        ../log/log
        ../err/err
